<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_teal"
        android:paddingBottom="@dimen/activity_main_button_padding_top"
        android:paddingLeft="@dimen/activity_main_button_padding_left"
        android:paddingRight="@dimen/activity_main_button_padding_left"
        android:paddingTop="@dimen/activity_main_button_padding_top"
        android:text="@string/button_play"
        android:clickable="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/activity_main_button_text_size"/>

</RelativeLayout>
